<%# app/views/customers/new.html.erb %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>RetailBuddy - Add New Customer</title>
    <%# Include necessary stylesheets %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "dashboard", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "admin", "data-turbo-track": "reload" %> <%# For form styling consistency %>
    <%= stylesheet_link_tag "customers", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "custom", "data-turbo-track": "reload" %>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= javascript_importmap_tags %>
    <%= favicon_link_tag "retail_icon.png?v=#{Rails.application.config.assets.version}", type: 'image/png' %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
    <%# Optional: Add embedded style to match select dropdowns if needed %>
    <%# --- EMBEDDED CSS --- %>
    <style>
      /* ... styles for select and textarea from previous step ... */
      .admin-page-container .input-group select,
      .admin-page-container .input-group textarea,
      .admin-page-container .input-group input[type="text"],
      .admin-page-container .input-group input[type="email"],
      .admin-page-container .input-group input[type="number"],
      .admin-page-container .input-group input[type="password"] {
          width: 100%;
          padding: 12px 15px;
          background-color: var(--input-bg);
          color: var(--text-color);
          border: 1px solid var(--border-color);
          border-radius: var(--border-radius-sm);
          line-height: normal; /* Use 1.5 specifically for textarea if needed */
          box-sizing: border-box;
          height: calc(1.5em + 24px + 2px); /* Base height */
          display: block;
          text-align: left !important;
          font-family: inherit;
          font-size: inherit;
      }
      .admin-page-container .input-group textarea {
          min-height: 80px; /* Override height for textarea */
          height: auto; /* Allow height to grow based on rows/content */
          line-height: 1.5;
          resize: vertical;
      }
      .admin-page-container .input-group select:focus,
      .admin-page-container .input-group textarea:focus,
      .admin-page-container .input-group input:focus {
          outline: none;
          border-color: var(--primary-color);
          box-shadow: 0 0 0 3px rgba(108, 99, 255, 0.2);
      }

      /* --- Style to remove underline from action buttons/links --- */
      /* Target specifically links with action-btn class within form-actions */
      .admin-page-container .form-actions a.action-btn,
      .admin-page-container .form-actions a.action-btn:visited,
      .admin-page-container .form-actions a.action-btn:hover,
      .admin-page-container .form-actions a.action-btn:active {
          text-decoration: none !important; /* Remove underline */
          /* Ensure consistent display if needed */
          /* display: inline-block; */
          /* vertical-align: middle; */
      }
    </style>
</head>
<body>
    <div class="admin-page-container"> <%# Use consistent container class %>
      <h1 class="admin-title">Add New Customer</h1>

      <%# --- EMBEDDED FORM for Customer --- %>
      <%= form_with(model: @customer, url: customers_path, method: :post, local: true) do |form| %>
        <%# Display errors if any %>
        <% if @customer.errors.any? %>
          <div style="color: red;">
            <h2><%= pluralize(@customer.errors.count, "error") %> prohibited this customer from being saved:</h2>
            <ul>
              <% @customer.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <%# Use lowercase attribute names for form fields %>
        <div class="input-group">
          <%= form.label :name %>
          <%= form.text_field :name, required: true %>
        </div>

        <div class="input-group">
          <%= form.label :email %>
          <%= form.email_field :email %>
        </div>

        <div class="input-group">
          <%= form.label :phone %>
          <%= form.text_field :phone %> <%# Use text_field for flexible phone formats %>
        </div>

        <div class="input-group">
          <%= form.label :address %>
          <%= form.text_area :address, rows: 4 %>
        </div>

        <div class="form-actions">
          <%= form.submit "Create Customer", class: "action-btn primary" %>
          <%= link_to "Cancel", customers_path, class: "action-btn secondary" %>
        </div>
      <% end %>
      <%# --- END EMBEDDED FORM --- %>

    </div>
</body>
</html>