<!-- app/views/products/_product_list_item.html.erb -->
<li class="product-item list-group-item" data-product-id="<%= product.id %>" data-product-name="<%= product.product_name %>" data-product-price="<%= product.price.to_f %>">
    <div class="d-flex justify-content-between align-items-center">
      <div>
        <span class="product-name"><%= product.product_name %></span>
        <small class="product-meta d-block text-muted">
          <%= number_to_currency(product.price || 0, unit: "â‚¹") %>&nbsp;

          <%# Display stock using the alias attribute from Product model %>
          <% stock = product.stock_quantity %>
          <span class="badge <%= stock.to_i > 0 ? 'bg-success-soft' : 'bg-danger-soft' %> text-dark">
            Stock: <%= stock.nil? ? 'N/A' : stock.to_i %>
          </span>
        </small>
      </div>
      <button class="add-item-btn action-btn btn btn-sm btn-primary" aria-label="Add <%= product.product_name %> to bill" data-action="click->billing#addItem">+</button>
    </div>
</li>
