<%# app/views/billing/new.html.erb %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>RetailBuddy - Billing</title>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "dashboard", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "billing", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "custom", "data-turbo-track": "reload" %>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= javascript_importmap_tags %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <div class="billing-page-container">

        <header class="billing-header">
            <%= link_to main_app.success_path_path, class: "billing-title-link" do %>
                <h1 class="billing-main-title">Point of Sale</h1>
            <% end %>
        </header>

        <div class="billing-grid-container">

            <%# === Column 1: Product Selection === %>
            <section class="billing-column product-selection-column">
                <h2 class="billing-column-title">Select Products</h2>
                <div class="product-search-container">
                    <div class="input-group">
                        <i class="fas fa-search input-icon"></i>
                        <input type="text" id="product-search" placeholder="Search products..." class="input-field w-full">
                    </div>
                </div>

                <div class="available-products-list">
                    <h3 class="billing-list-header">Available Products</h3>
                    <% if defined?(@products) && @products.present? %>
                        <ul class="product-items">
                            <% @products.each do |product| %>
                                <li class="product-item">
                                    <div class="product-info">
                                        <span class="product-name"><%= product.product_name %></span>
                                        <span class="product-price"><%= number_to_currency(product.price || 0, unit: "₹") %></span>
                                        <span class="product-stock">Stock: <%= product.inventory&.reorder_level || 'N/A' %></span>
                                    </div>
                                    <%# This button uses .action-btn class for styling (including colors from your CSS) %>
                                    <button class="add-item-btn action-btn" aria-label="Add <%= product.product_name %> to bill">+</button>
                                </li>
                            <% end %>
                        </ul>
                    <% else %>
                        <p class="empty-list-message">No products found.</p>
                    <% end %>
                </div>
            </section>

            <%# === Column 2: Current Bill === %>
            <section class="billing-column current-bill-column">
                <h2 class="billing-column-title">Current Bill</h2>

                <div class="customer-selection-area">
                    <label for="customer-select" class="form-label">Customer:</label>
                    <div class="customer-controls">
                         <div class="input-group">
                            <%# --- Inline style added below --- %>
                            <select id="customer-select" name="invoice[customer_id]" class="select-field w-full" style="padding: 8px 12px; border: 1px solid #ccc; border-radius: 4px; background-color: white; min-width: 200px;">
                            <%# --- End inline style --- %>
                                <option value="">Select Customer (Optional)</option>
                                <% if defined?(@customers) && @customers.present? %>
                                    <% @customers.each do |customer| %>
                                        <option value="<%= customer.id %>"><%= customer.name %> (<%= customer.email || customer.phone || 'No Contact' %>)</option>
                                    <% end %>
                                <% end %>
                            </select>
                         </div>
                         <%= link_to new_customer_path, class: "action-btn add-customer-btn" do %>
                             <i class="fas fa-plus"></i> New
                         <% end %>
                    </div>
                </div>

                <div class="bill-items-table-wrapper">
                    <table class="bill-items-table">
                        <thead>
                            <tr>
                                <th>Item</th>
                                <th>Qty</th>
                                <th>Price</th>
                                <th>Total</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody id="bill-items-body">
                            <%# Dynamic content via JavaScript %>
                            <tr id="no-items-row" class="<%= @bill_items.empty? ? '' : 'hidden' %>">
                              <td colspan="5" class="no-items-message">No items added yet.</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </section>

            <%# === Column 3: Summary & Payment === %>
            <section class="billing-column summary-payment-column">
                <h2 class="billing-column-title">Summary</h2>
                <div class="summary-details">
                    <div class="summary-item"><span>Subtotal</span><span id="summary-subtotal">₹0.00</span></div>
                    <div class="summary-item"><span>Discount</span><span id="summary-discount">₹0.00</span></div>
                    <div class="summary-item"><span>Tax (Est.)</span><span id="summary-tax">₹0.00</span></div>
                    <hr class="summary-divider">
                    <div class="summary-item grand-total"><span>Grand Total</span><span id="summary-grandtotal">₹0.00</span></div>
                </div>

                <h3 class="billing-section-header">Payment Method</h3>
                <div class="payment-methods">
                    <button class="payment-btn action-btn" data-method="Cash"><i class="fas fa-money-bill-wave"></i> Cash</button>
                    <button class="payment-btn action-btn" data-method="UPI"><i class="fas fa-mobile-alt"></i> UPI</button>
                </div>

                <div class="finalize-actions">
                    <button class="action-btn primary finalize-btn" id="finalize-bill-btn"><i class="fas fa-check-circle"></i> Finalize Bill</button>
                    <button class="action-btn secondary cancel-btn" id="cancel-bill-btn"><i class="fas fa-times-circle"></i> Cancel</button>
                </div>
            </section>

        </div> <%# End billing-grid-container %>

    </div> <%# End billing-page-container %>

    <%# You need to implement JavaScript (e.g., in app/javascript/billing.js) to handle: %>
    <%# - Product search filtering %>
    <%# - Adding items from the list to the 'Current Bill' table %>
    <%# - Updating quantities in the bill %>
    <%# - Removing items from the bill %>
    <%# - Calculating subtotal, tax, discount, grand total %>
    <%# - Selecting payment method %>
    <%# - Submitting the finalized bill (likely via AJAX to BillingController) %>
    <%# - Handling the cancel action %>
    <%#= javascript_include_tag "billing", "data-turbo-track": "reload", type: "module" %>
</body>
</html>