<%# app/views/reports/index.html.erb %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>RetailBuddy - Reports & Analytics</title>

    <%# Link necessary stylesheets directly %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "dashboard", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "reports", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "custom", "data-turbo-track": "reload" %>

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= javascript_importmap_tags %>

    <%# External Fonts/Icons %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">

</head>
<body>

    <%# Top navigation header removed as per previous request %>

    <div class="reports-page-container">

      <%# Re-added the reports header section %>
      <div class="reports-header">
        <h1 class="reports-title">Reports & Analytics</h1>
        <%# Add any overall report actions here if needed %>
      </div>

      <%# Placeholder for common filters like date ranges %>
      <div class="report-filters">
        <label for="start_date">From:</label>
        <input type="date" id="start_date" name="start_date">
        <label for="end_date">To:</label>
        <input type="date" id="end_date" name="end_date">
        <button class="action-btn primary">Apply Filters</button>
      </div>

      <div class="report-categories">

        <%# Sales Reports Card %>
        <div class="report-card">
          <div class="report-card-header">
            <i class="fas fa-chart-line report-card-icon"></i>
            <h3>Sales Reports</h3>
          </div>
          <p>Analyze sales performance, top products, and revenue trends.</p>
          <div class="report-links">
            <a href="#"><i class="fas fa-calendar-day"></i> Daily Sales Summary</a> <%# Placeholder Link %>
            <a href="#"><i class="fas fa-calendar-week"></i> Weekly/Monthly Sales</a> <%# Placeholder Link %>
            <a href="#"><i class="fas fa-tags"></i> Sales by Product/Category</a> <%# Placeholder Link %>
            <a href="#"><i class="fas fa-user-tag"></i> Sales by Customer</a> <%# Placeholder Link %>
          </div>
        </div>

        <%# Tax Reports Card %>
        <div class="report-card">
           <div class="report-card-header">
            <i class="fas fa-receipt report-card-icon"></i>
            <h3>Tax Reports</h3>
          </div>
          <p>View collected taxes (like GST) based on sales within selected periods.</p>
           <div class="report-links">
            <a href="#"><i class="fas fa-calendar-alt"></i> Tax Summary by Period</a> <%# Placeholder Link %>
            <a href="#"><i class="fas fa-file-invoice-dollar"></i> Detailed Tax per Invoice</a> <%# Placeholder Link %>
            <%# Add more specific tax reports if needed %>
          </div>
        </div>

        <%# Customer Reports Card %>
        <div class="report-card">
          <div class="report-card-header">
            <i class="fas fa-users report-card-icon"></i>
            <h3>Customer Reports</h3>
          </div>
          <p>Understand customer purchasing habits and identify top customers.</p>
          <div class="report-links">
             <a href="#"><i class="fas fa-user-friends"></i> Customer List & Details</a> <%# Placeholder Link %>
             <a href="#"><i class="fas fa-shopping-basket"></i> Purchase History by Customer</a> <%# Placeholder Link %>
             <a href="#"><i class="fas fa-crown"></i> Top Customers by Spend</a> <%# Placeholder Link %>
          </div>
        </div>

      </div> <%# End report-categories %>

    </div> <%# End reports-page-container %>

</body>
</html>