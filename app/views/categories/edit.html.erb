<%# app/views/categories/edit.html.erb %>
<%# Render within a layout, e.g., layouts/admin.html.erb %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%= favicon_link_tag "retail_icon.png?v=#{Rails.application.config.assets.version}", type: 'image/png' %>
    <title>RetailBuddy - Edit Category</title>
    <%# Ensure these stylesheets are loaded and contain the necessary theme variables/styles %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "dashboard", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "inventory", "data-turbo-track": "reload" %>
    <%# stylesheet_link_tag "admin", "data-turbo-track": "reload" %>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= javascript_importmap_tags %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <%# render 'layouts/admin_navigation' %>

    <%# Use admin-page-container %>
    <div class="admin-page-container">
       <%# Use inventory-header structure %>
       <div class="inventory-header">
           <h1 class="inventory-title">Edit Category: <%= @category.name %></h1>
           <div class="inventory-actions">
               <%= link_to '<i class="fas fa-list-ul mr-1"></i> Back to Categories'.html_safe, categories_path, class: "action-btn secondary inline-flex items-center" %>
           </div>
       </div>

      <%# Form %>
      <%= form_with(model: @category, local: true) do |form| %>
        <%# Error Messages %>
        <% if @category.errors.any? %>
          <div id="error_explanation" class="error-summary">
            <h2><%= pluralize(@category.errors.count, "error") %> prohibited this category from being saved:</h2>
            <ul>
              <% @category.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <%# Name Field %>
        <div class="input-group">
          <%= form.label :name, class: "form-label" %>
          <%= form.text_field :name, class: "form-input", placeholder: "e.g., Electronics, Groceries" %>
        </div>

        <%# Tax Percentage Field - Changed to Select Dropdown %>
        <div class="input-group">
            <%= form.label :tax_percentage, "Tax Slab (%)", class: "form-label" %>
            <%# Define options: [Display Text, Value to Save] %>
            <% tax_options = [['0%', 0.0], ['5%', 5.0], ['12%', 12.0], ['18%', 18.0], ['28%', 28.0]] %>
            <%# Use form.select - apply form-input class for consistent styling %>
            <%# The currently saved value will be pre-selected %>
            <%= form.select :tax_percentage, options_for_select(tax_options, @category.tax_percentage), {}, { class: "form-input" } %>
             <%# Removed the hint text %>
        </div>

        <%# Actions %>
        <div class="form-actions">
           <%= link_to "Cancel", categories_path, class: "action-btn secondary" %>
           <%= form.submit "Update Category", class: "action-btn primary" %>
        </div>
      <% end %> <%# End of form_with %>
      <%# End Form %>

    </div>
    <%# render 'layouts/admin_footer' %>
</body>
</html>